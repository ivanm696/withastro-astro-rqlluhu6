    <div class="container">
        <div class="hero">
            <div class="badge">‚ú® AI-Powered Chat</div>
            <h1>Chat with Astro</h1>
            <p class="subtitle">
                Get instant help, explore features, and learn about the web framework for content-driven websites
            </p>
        </div>

        <div class="chat-wrapper">
            <div class="chat-header">
                <div class="chat-title">Astro Assistant</div>
                <div class="status">
                    <div class="status-dot"></div>
                    Online
                </div>
            </div>

            <div class="chat-messages" id="chatMessages">
                <div class="welcome">
                    <h2>üëã Welcome to Astro Chat</h2>
                    <p>Ask me anything about Astro, web development, or how to get started!</p>
                </div>
            </div>

            <div class="chat-input">
                <div class="input-wrapper">
                    <input 
                        type="text" 
                        id="messageInput" 
                        placeholder="Ask about Astro features, best practices, or anything else..."
                        autocomplete="off"
                    >
                    <button id="sendBtn">Send</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const chatMessages = document.getElementById('chatMessages');
        const messageInput = document.getElementById('messageInput');
        const sendBtn = document.getElementById('sendBtn');

        const botResponses = [
            "Great question! Astro is designed to build fast, content-driven websites with zero JavaScript by default.",
            "I'd be happy to help with that! Astro supports React, Vue, Svelte, and many other frameworks.",
            "Interesting! With Astro Islands, you can create highly interactive components while keeping your site fast.",
            "Let me help you with that. Astro uses file-based routing, making it intuitive to structure your site.",
            "That's a smart approach! Astro's content collections make it easy to work with Markdown and MDX.",
            "Excellent choice! You can deploy Astro sites to Netlify, Vercel, or any static hosting platform.",
            "Good question! Astro components are similar to HTML with superpowers - if you know HTML, you're ready!",
            "I can help with that! Check out the official documentation for detailed guides and examples."
        ];

        function addMessage(text, isUser) {
            const welcomeMsg = chatMessages.querySelector('.welcome');
            if (welcomeMsg) {
                welcomeMsg.remove();
            }

            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isUser ? 'user' : 'bot'}`;
            
            const avatar = document.createElement('div');
            avatar.className = `avatar ${isUser ? 'user' : 'bot'}`;
            avatar.textContent = isUser ? 'U' : 'A';
            
            const content = document.createElement('div');
            content.className = 'message-content';
            content.textContent = text;
            
            messageDiv.appendChild(avatar);
            messageDiv.appendChild(content);
            chatMessages.appendChild(messageDiv);
            
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function sendMessage() {
            const text = messageInput.value.trim();
            if (!text) return;

            addMessage(text, true);
            messageInput.value = '';

            setTimeout(() => {
                const response = botResponses[Math.floor(Math.random() * botResponses.length)];
                addMessage(response, false);
            }, 800);
        }

        sendBtn.addEventListener('click', sendMessage);
        messageInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
    </script>
</body>
</html>
